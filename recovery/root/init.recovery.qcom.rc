# -----------------------------------------------------------------------------
# Qualcomm Recovery Init – Spacewar (Nothing Phone 1)
# FINAL FULL VERSION – HARDWARE SAFE
# -----------------------------------------------------------------------------

import /init.recovery.qcom_decrypt.rc

# -----------------------------------------------------------------------------
# Early Init
# -----------------------------------------------------------------------------
on early-init
    exec u:r:set_permissive:s0 -- /system/bin/set_permissive.sh

    mkdir /firmware
    mkdir /vendor/firmware_mnt
    symlink /vendor/firmware_mnt /firmware
    symlink /vendor/bt_firmware /bt_firmware
    symlink /vendor/dsp /dsp

    write /proc/sys/kernel/firmware_config/force_sysfs_fallback 1

# -----------------------------------------------------------------------------
# Init
# -----------------------------------------------------------------------------
on init
    mount_all /vendor/etc/charger_fw_fstab.qti --early

    write /sys/class/backlight/panel0-backlight/brightness 200

    setprop sys.usb.configfs 1
    write /sys/class/power_supply/usb/otg_switch 1

# -----------------------------------------------------------------------------
# Filesystem & Modules
# -----------------------------------------------------------------------------
on fs
    export LD_LIBRARY_PATH /system/lib64:/vendor/lib64:/vendor/lib64/hw:/vendor/lib64/modules

    wait /dev/block/platform/soc/${ro.boot.bootdevice}
    symlink /dev/block/platform/soc/${ro.boot.bootdevice} /dev/block/bootdevice

    mkdir /vendor_dlkm
    wait /dev/block/bootdevice/by-name/vendor_dlkm${ro.boot.slot_suffix}
    mount erofs /dev/block/bootdevice/by-name/vendor_dlkm${ro.boot.slot_suffix} /vendor_dlkm ro

    # Firmware (CRITICAL)
    mount vfat /dev/block/bootdevice/by-name/modem${ro.boot.slot_suffix} /firmware ro context=u:object_r:firmware_file:s0

    # Kernel modules (ORDER MATTERS)
    insmod /vendor_dlkm/lib/modules/msm_drm.ko
    insmod /vendor_dlkm/lib/modules/q6_pdr_dlkm.ko
    insmod /vendor_dlkm/lib/modules/q6_notifier_dlkm.ko
    insmod /vendor_dlkm/lib/modules/snd_event_dlkm.ko
    insmod /vendor_dlkm/lib/modules/apr_dlkm.ko
    insmod /vendor_dlkm/lib/modules/adsp_loader_dlkm.ko
    insmod /vendor_dlkm/lib/modules/sensors_ssc.ko
    insmod /vendor_dlkm/lib/modules/qti_battery_charger_main.ko
    insmod /vendor_dlkm/lib/modules/fts_tp.ko
    insmod /vendor_dlkm/lib/modules/goodix_fp.ko

# -----------------------------------------------------------------------------
# Late FS
# -----------------------------------------------------------------------------
on late-fs
    start keymasterd
    start set_permissive

# -----------------------------------------------------------------------------
# Post FS
# -----------------------------------------------------------------------------
on post-fs
    start boot-hal-1-1

# -----------------------------------------------------------------------------
# Services
# -----------------------------------------------------------------------------
service set_permissive /system/bin/set_permissive.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

service vendor.qti.vibrator /system/bin/vendor.qti.hardware.vibrator.service
    user root
    group root
    disabled
    setenv LD_LIBRARY_PATH /vendor/lib64:/vendor/lib:/system/lib64:/system/lib:/sbin
    seclabel u:r:recovery:s0

service unified-script /system/bin/unified-script.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

service wrapped-key /system/bin/wrappedkey-fix.sh
    user root
    group root
    disabled
    oneshot
    seclabel u:r:recovery:s0

# -----------------------------------------------------------------------------
# Boot
# -----------------------------------------------------------------------------
on boot
    start health-hal-2-1

    start vendor.qti.vibrator
    wait /sys/class/leds/vibrator/gain
    write /sys/class/leds/vibrator/vmax_mv 1200
    write /sys/class/leds/vibrator/gain 0x30

    setprop sys.usb.config adb
    chmod 0777 /system/bin/unified-script.sh
    start unified-script

# -----------------------------------------------------------------------------
# ADSP Trigger
# -----------------------------------------------------------------------------
on property:dev.mnt.blk.firmware=*
    wait /sys/kernel/boot_adsp/boot
    write /sys/kernel/boot_adsp/boot 1

# -----------------------------------------------------------------------------
# Decryption Helpers
# -----------------------------------------------------------------------------
on property:ro.crypto.state=encrypted && property:ro.crypto.type=file
    chmod 0777 /system/bin/wrappedkey-fix.sh
    start wrapped-key

#on property:prepdecrypt.vendor_mounted=1
#    setprop crypto.ready 1

service keymasterd /system/bin/keymasterd
     user root
     group root
     disabled
     seclabel u:r:recovery:s0

# -----------------------------------------------------------------------------
# USB Controller Fix
# -----------------------------------------------------------------------------
on property:ro.boot.usbcontroller=*
    setprop sys.usb.controller ${ro.boot.usbcontroller}
    wait /sys/bus/platform/devices/${ro.boot.usb.dwc3_msm:-a600000.ssusb}/mode
    write /sys/bus/platform/devices/${ro.boot.usb.dwc3_msm:-a600000.ssusb}/mode peripheral

